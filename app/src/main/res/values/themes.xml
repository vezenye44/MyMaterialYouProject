<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyMaterialProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyAppCustomTheme" parent="Theme.MyMaterialProject">
        <!-- Primary and Secondary brand color. -->
        <item name="colorPrimary">#5d4037</item>
        <item name="colorPrimaryVariant">#3e2723</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#ffca28</item>
        <item name="colorSecondaryVariant">#ffc107</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="chipStyle">@style/MyChipStyle</item>

    </style>

    <style name="MyChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/selector_chose_chip_background_color</item>
        <item name="chipIcon">@drawable/ic_baseline_download_done_24</item>
    </style>

</resources>